<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<addon id="script.squeezeinfo"
       name="Squeeze Info"
       version="0.0.1"
       provider-name="elParaguayo">

    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.pil" version="1.1.7"/>
        <import addon="script.module.requests" version="1.1.0"/>
        <import addon="script.module.kodi65" version="1.2.0" />
        <!--below addon only needed when debugging-->
        <!--<import addon="script.module.web-pdb" version="1.0"/>-->
    </requires>

    <extension point="xbmc.python.script" library="main.py" />

    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Provides graphical view of music being played via a Logitech Media Server</summary>
        <language></language>
        <license>MIT License</license>
        <forum></forum>
        <source>https://github.com/elParaguayo/script.squeezeinfo</source>
        <email></email>
        <disclaimer lang="en"></disclaimer>
        <assets>
          <fanart>resources/screenshots/screenshot-01.png</fanart>
          <screenshot>resources/screenshots/screenshot-01.png</screenshot>
          <screenshot>resources/screenshots/screenshot-02.png</screenshot>
          <screenshot>resources/screenshots/screenshot-03.png</screenshot>
        </assets>

    </extension>

</addon>
