<window id="1140">

  <defaultcontrol>50</defaultcontrol>

  <controls>

   <!-- Background image -->
    <control type="multiimage">
       <width>100%</width>
       <height>100%</height>
       <visible>true</visible>
       <animation type="Conditional" condition="String.IsEqual(Window.Property(SQUEEZEINFO_SERVER_CONNECTED),false) | String.IsEqual(Window.Property(SQUEEZEINFO_HAS_PLAYER),false)" reversible="true">
          <effect type="fade" start="0" end="100" time="500" delay="500" />
       </animation>
       <imagepath>$INFO[Window.Property(SQUEEZE_IMAGE_FOLDER)]</imagepath>
       <timeperimage>5000</timeperimage>
       <fadetime>2000</fadetime>
       <pauseatend>1000</pauseatend>
       <randomize>true</randomize>
       <aspectratio>scale</aspectratio>
    </control>

   <control type="image">

     <left>0</left>
 		 <top>0</top>
 		 <width>100%</width>
 		 <height>100%</height>
     <visible>true</visible>
     <animation type="Conditional" condition="String.IsEqual(Window.Property(SQUEEZEINFO_SERVER_CONNECTED),false) | String.IsEqual(Window.Property(SQUEEZEINFO_HAS_PLAYER),false)" reversible="true">
        <effect type="fade" start="100" end="0" time="500" delay="500" />
     </animation>
     <aspectratio>scale</aspectratio>

     <texture>$INFO[Window.Property(SQUEEZEINFO_NP_BACKGROUND)]</texture>

   </control>

